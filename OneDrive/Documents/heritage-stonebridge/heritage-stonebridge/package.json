{
  "name": "elderjs-template",
  "version": "1.3.4",
  "description": "This is a project template for [Elder.js](https://elderguide.com/tech/elderjs/) apps. The template lives at https://github.com/elderjs/template and the Elder.js source is here: https://github.com/elderjs/elderjs",
  "main": "./src/build.js",
  "scripts": {
    "start": "npm run dev",
    "build": "node ./src/cleanPublic.js && npm run build:rollup && npm run build:html",
    "build:rollup": "rollup -c",
    "build:html": "node ./src/build.js",
    "dev": "rollup -c -w --no-watch.clearScreen",
    "dev:fast": "npm run esbuild",
    "serve": "node ./src/cleanPublic.js && npm run build:rollup && NODE_ENV=production node ./src/server.js",
    "esbuild": "node esbuild",
    "lint": "eslint --ext .js,.svelte src",
    "lint:fix": "eslint --fix --ext .js,.svelte src",
    "format": "prettier --write \"src/**/*.{js,svelte,css}\"",
    "format:check": "prettier --check \"src/**/*.{js,svelte,css}\"",
    "test": "echo \"No tests specified\" && exit 0",
    "test:coverage": "echo \"No coverage tests specified\" && exit 0",
    "preview": "npm run build && npm run serve",
    "clean": "rimraf public .svelte-kit",
    "type-check": "echo \"No TypeScript configured\" && exit 0",
    "eslint": "eslint --ext .js .",
    "eslint:fix": "eslint --fix --ext .js .",
    "prettier:svelte": "prettier --write --plugin-search-dir=. ./**/*.svelte",
    "seo:audit": "node scripts/seo-audit.js",
    "seo:optimize": "node scripts/performance-optimizer.js",
    "seo:all": "npm run seo:audit && npm run seo:optimize",
    "analyze": "npm run build && npm run seo:all",
    "lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "optimize:images": "node scripts/optimize-images.js",
    "sitemap": "node scripts/generate-sitemap.js",
    "performance": "node scripts/performance.js",
    "optimize:all": "npm run optimize:images && npm run sitemap && npm run seo:all && npm run build"
  },
  "type": "commonjs",
  "engines": {
    "node": ">= 12.0.0"
  },
  "dependencies": {
    "@elderjs/elderjs": "^1.7.1",
    "@elderjs/plugin-browser-reload": "^1.3.2",
    "@elderjs/plugin-markdown": "^1.3.2",
    "@elderjs/plugin-seo-check": "^1.3.2",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "del": "^6.0.0",
    "dotenv": "^8.2.0",
    "fs-extra": "^9.1.0",
    "glob": "^7.1.6",
    "intersection-observer": "^0.12.0",
    "polka": "^0.5.2",
    "sirv": "^1.0.11",
    "svelte": "^3.38.3",
    "svelte-preprocess": "^4.6.9"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/runtime": "^7.13.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.7",
    "postcss": "^8.5.6",
    "prettier": "^2.1.2",
    "prettier-plugin-svelte": "^2.2.0",
    "rollup": "^2.41.1",
    "tailwindcss": "^4.1.13"
  },
  "author": "Nick Reese",
  "license": "MIT",
  "files": [
    "index.js",
    "elderjs"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Elderjs/template.git"
  },
  "keywords": [
    "svelte",
    "elderjs",
    "ssr",
    "static",
    "site",
    "generator",
    "seo",
    "ssg",
    "template",
    "partial",
    "hydration"
  ],
  "bugs": {
    "url": "https://github.com/Elderjs/template/issues"
  },
  "homepage": "https://github.com/Elderjs/template#readme"
}
